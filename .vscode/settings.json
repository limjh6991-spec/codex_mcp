{
    "python.defaultInterpreterPath": ".venv/bin/python",
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.analysis.autoImportCompletions": true,
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.mypy_cache": true
    },
    "terminal.integrated.env.linux": {
        "PYTHONUNBUFFERED": "1",
        "ISAAC_SIM_ROOT": "/home/roarm_m3/isaac_sim"
    },
    "mcp.servers": [
        {
            "name": "isaac",
            "command": "python",
            "args": [
                "mcp_servers/isaac_controller_server.py"
            ],
            "env": {
                "PYTHONUNBUFFERED": "1",
                "ISAAC_SIM_PATH": "${env:ISAAC_SIM_PATH}"
            }
        },
        {
            "name": "ContextBridgeMcp",
            "command": "python",
            "args": [
                "${workspaceFolder}/context_bridge/context_bridge_mcp.py"
            ],
            "env": {
                "PYTHONUNBUFFERED": "1",
                "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
                "ANTHROPIC_API_KEY": "${env:ANTHROPIC_API_KEY}"
            }
        }
    ]
}